<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:svgimageview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/describe_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DescribeActivity" >

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/label_ask_nplayers"
        android:textColor="#EEEEEE"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <SeekBar
            android:id="@+id/lv_nplayers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:indeterminate="false"
            android:max="20"
            android:progress="5" />

        <TextView
            android:id="@+id/lv_nplayers_prompt"
            android:layout_width="87dp"
            android:layout_height="match_parent"
            android:text="TextView"
            android:textColor="#EEEEEE"
            android:textSize="24sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/lv_label_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/label_ask_startmode"
        android:textColor="#EEEEEE"
        android:textSize="24sp" />

    <com.caverock.androidsvg.SVGImageView
        android:id="@+id/lv_mode"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="0.27"
        android:scaleType="fitCenter"
        svgimageview:svg="@drawable/choose_mode" />

    <Button
        android:id="@+id/lv_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/action_start" />

</LinearLayout>
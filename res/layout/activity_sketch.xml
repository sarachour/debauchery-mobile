<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/describe_view"
    style="@style/CardStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    tools:context=".DrawActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp" >

        <ImageButton
            android:id="@+id/cv_sel_prompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:cropToPadding="false"
            android:padding="0dp"
            android:src="@drawable/inset_shape" />

        <ImageButton
            android:id="@+id/cv_sel_draw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:padding="0dp"
            android:scaleType="center"
            android:src="@drawable/card_shape" />

    </LinearLayout>

    <ViewSwitcher
        android:id="@+id/cv_switcher"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:layout_weight="0.80"
        android:padding="0dp" >

        <LinearLayout
            android:id="@+id/cv_prompt_container"
            style="@style/InsetStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.20"
            android:orientation="vertical"
            android:padding="24dp" >

            <TextView
                android:id="@+id/cv_prompt"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="0.40"
                android:text="@string/default_prompt"
                android:textAppearance="@style/SubHeaderWhiteTextStyle" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cv_sketch_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.20"
            android:orientation="vertical"
            android:padding="12dp" >

            <fragment
                android:id="@+id/cv_sketchpad"
                android:name="com.debauchery.fragment.DrawFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout="@layout/frag_draw" />
        </LinearLayout>

    </ViewSwitcher>

    <Button
        android:id="@+id/cv_done"
        style="@style/AppBaseTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/action_done"
        android:textAppearance="@style/SubHeaderWhiteTextStyle" />

</LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/describe_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DescribeActivity" >

    <TextView
        android:id="@+id/lv_label_1"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:text="Please choose a word or phrase:" />

    <EditText
        android:id="@+id/lv_prompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.11"
        android:ems="10" />

    <TextView
        android:id="@+id/lv_label_2"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:text="How many people are playing?" />

    <EditText
        android:id="@+id/lv_nplayers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:text="2" />

    <Button
        android:id="@+id/lv_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start" />

    <EditText
        android:id="@+id/dv_describe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.37"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/dv_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Done" />

</LinearLayout>
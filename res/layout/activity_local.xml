<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/local_game_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DescribeActivity" >

    <Button
        android:id="@+id/lg_prev"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="&lt;&lt;&lt;&lt;&lt;&lt;&lt;&lt;&lt;&lt;" />

    <LinearLayout
        style="@style/CardStyle"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:padding="10dp" >

        <TextView
            android:id="@+id/lg_player_turn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/lg_frag_container"
        style="@drawable/inset_shape"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3.44"
        android:background="@drawable/inset_shape"
        android:padding="10dp" >

    </FrameLayout>

    <Button
        android:id="@+id/lg_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=">>>>>>>>>" />

</LinearLayout>
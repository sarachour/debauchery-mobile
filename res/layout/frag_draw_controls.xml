<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    style="@style/InsetStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp" xmlns:app="http://schemas.android.com/apk/res/afzkl.development.colorpickerview.demo" xmlns:tools="http://schemas.android.com/tools" tools:context=".DrawControlsFragment">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp" >

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="General"
            android:textAppearance="@style/SubHeaderWhiteTextStyle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp" >

            <ImageButton
                android:id="@+id/fdc_fill"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:layout_weight="0.08"
                android:src="@drawable/fill" />

            <ImageButton
                android:id="@+id/fdc_undo"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:layout_weight="0.08"
                android:src="@drawable/undo" />

            <ImageButton
                android:id="@+id/fdc_redo"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:layout_weight="0.08"
                android:src="@drawable/redo" />

            <ImageButton
                android:id="@+id/fdc_clear"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:layout_weight="0.08"
                android:src="@drawable/clear" />

        </LinearLayout>

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Pen Thickness"
            android:textAppearance="@style/SubHeaderWhiteTextStyle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <SeekBar
                android:id="@+id/fdc_thickness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/fdc_thickness_label"
                android:layout_width="38dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAppearance="@style/SubHeaderWhiteTextStyle" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Color"
            android:textAppearance="@style/SubHeaderWhiteTextStyle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <com.debauchery.sketch.ColorPickerView
                android:id="@+id/fdc_colorpicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

</LinearLayout>

</RelativeLayout>

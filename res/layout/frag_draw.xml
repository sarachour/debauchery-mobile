<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/FrameLayout1"
    style="@style/InsetStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    tools:context=".DrawFragment" >

    <com.debauchery.sketch.SketchPad
        android:id="@+id/fd_sketchpad"
        android:layout_width="fill_parent"
        android:layout_height="match_parent" />

    <SlidingDrawer
        android:id="@+id/slidingDrawer1"
        android:layout_width="match_parent"
        android:layout_height="247dp"
        android:layout_gravity="bottom"
        android:content="@+id/content"
        android:handle="@+id/fd_show_controls" >

        <ImageButton
            android:id="@+id/fd_show_controls"
            style="@style/InsetStyle"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:src="@drawable/up" />

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <include
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                layout="@layout/frag_draw_controls"
                android:background="@drawable/up" />

        </LinearLayout>
    </SlidingDrawer>

</FrameLayout>
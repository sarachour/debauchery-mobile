<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.debauchery.MainActivity"
    tools:ignore="MergeRootFrame" >

   

    <Button
        android:id="@+id/main_describe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Describe Drawing" />

    <Button
        android:id="@+id/main_draw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Draw Description" />

    <Button
        android:id="@+id/main_host"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Host Game" />

    <Button
        android:id="@+id/main_join"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Join Game" />

    <Button
        android:id="@+id/main_playback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Playback" />
    
</LinearLayout>

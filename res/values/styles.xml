<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    
    <color name="inset_color">#FF444444</color>
    <style name="InsetStyle" parent="AppTheme">
        <item name="android:background">@drawable/inset_shape</item>
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">fill_parent</item>
	    <item name="android:orientation">horizontal</item>
	    <item name="android:gravity">center_vertical</item>
    </style>
    <style name="CardStyle" parent="AppTheme">
        <item name="android:background">@drawable/card_shape</item>
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">fill_parent</item>
	    <item name="android:orientation">horizontal</item>
	    <item name="android:gravity">center_vertical</item>
    </style>
	<style name="ReviewWedgeStyle" parent="AppTheme">
        <item name="android:background">@drawable/card_shape</item>
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">150dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
	    <item name="android:padding">5dp</item>
	    <item name="android:orientation">horizontal</item>
	    <item name="android:gravity">center_vertical</item>
    </style>
    <style parent="WhiteTextStyle" name="SmallWhiteTextStyle">
		<item name="android:textSize">14sp</item>
	</style>
    <style parent="WhiteTextStyle" name="SubHeaderWhiteTextStyle">
		<item name="android:textSize">25sp</item>
	</style>
	<style parent="TextStyle" name="WhiteTextStyle">
		<item name="android:textColor">#EEEEEE</item>
	</style>
	<style name="TextStyle">
		<item name="android:typeface">monospace</item>
	</style>
</resources>
